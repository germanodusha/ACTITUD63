{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "next",
        "standard-with-typescript",
        "plugin:react/recommended",
        "prettier",
        "plugin:react/jsx-runtime"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier":[ 
            "error",
            {
              "endOfLine": "auto",
              "trailingComma": "none",
              "tabWidth": 2,
              "semi": false,
              "singleQuote": true,
              "printWidth": 80
            }
        ]
    }
}
